# Alpha Arena OKX 配置示例
# 复制此文件为 .env 并根据需要修改

# OKX API 配置
OKX_API_KEY=your_api_key_here
OKX_SECRET=your_secret_here
OKX_PASSWORD=your_password_here
OKX_SANDBOX=false

# 交易配置
TEST_MODE=true
LEVERAGE=10
MAX_POSITION_SIZE=0.01
MIN_TRADE_AMOUNT=0.001

# 循环周期配置（分钟）
# 支持：5, 15, 30, 60 等整点执行
CYCLE_MINUTES=15

# AI 配置
KIMI_KEY=your_kimi_key_here

# 其他配置
LIMIT_ORDER_ENABLED=true